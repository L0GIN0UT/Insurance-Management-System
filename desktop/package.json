{
  "name": "insurance-desktop",
  "version": "1.0.0",
  "description": "Insurance Management System Desktop Application",
  "main": "dist/main/main.js",
  "scripts": {
    "dev": "concurrently -k -n FRONTEND,ELECTRON \"cd .. && npm run dev --workspace=frontend\" \"npm:dev:electron\"",
    "dev:electron": "wait-on tcp:3000 && electron .",
    "build": "cd .. && npm run build --workspace=frontend && cd desktop && npm run build:main",
    "start": "electron .",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "cd .. && npm run build --workspace=frontend"
  },
  "keywords": [
    "insurance",
    "electron",
    "react",
    "typescript"
  ],
  "author": "Insurance Management System",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^18.0.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^30.0.0",
    "typescript": "^5.4.5",
    "wait-on": "^6.0.1"
  },
  "dependencies": {
    "buffer": "^6.0.3",
    "electron-squirrel-startup": "^1.0.0"
  },
  "build": {
    "appId": "com.insurance.desktop",
    "productName": "Insurance Management System",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "public/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "public/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
