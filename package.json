{
  "name": "diplom-gowna-monorepo",
  "version": "1.0.0",
  "description": "Insurance Management System - Monorepo",
  "private": true,
  "workspaces": [
    "frontend",
    "desktop",
    "web/backend",
    "web/auth-service"
  ],
  "scripts": {
    "dev:desktop": "npm run dev --workspace=desktop",
    "dev:web": "npm run dev --workspace=frontend",
    "build:web": "npm run build --workspace=frontend",
    "build:desktop": "npm run build --workspace=desktop",
    "build:all": "npm run build:web && npm run build:desktop"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "typescript": "^5.4.5"
  }
} 